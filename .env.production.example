# Production Environment Variables for Coolify Deployment
# Copy this file to .env.production and fill in the values

# Database Configuration
POSTGRES_DB=n8n_clone
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_here

# Redis Configuration  
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Application Configuration
NODE_ENV=production
JWT_SECRET=your_very_secure_jwt_secret_here_minimum_32_characters
SESSION_SECRET=your_secure_session_secret_here

# Backend Configuration
PORT=4000
LOG_LEVEL=info
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}
REDIS_URL=redis://redis:6379

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com

# Webhook Configuration
WEBHOOK_URL=https://yourdomain.com

# Frontend Configuration
VITE_API_URL=https://api.yourdomain.com
FRONTEND_PORT=3000
BACKEND_PORT=4000

# Nginx Configuration
NGINX_HOST=yourdomain.com

# Coolify Specific
COOLIFY_PROJECT_NAME=n8n-clone
COOLIFY_ENVIRONMENT=production

# Optional: External Services
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASS=
# SMTP_FROM=

# Optional: File Storage
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=
# AWS_S3_BUCKET=

# Optional: Monitoring
# SENTRY_DSN=
# ANALYTICS_ID=